<BookInfoCard>:
    pos_hint: {'center_y': .5, 'center_x': .5}
    size_hint: .97, None
    height: dp(400)
    # md_bg_color: 1, 1, 1, 1
    elevation: 0.5
    radius: 2, 2
    padding: dp(5)
    
    MDRelativeLayout:
        # md_bg_color: 1, 1, 1, 1

        AngularRectangle:
            # md_bg_color: 1, 1, 1, 1
            size_hint: .95, .6
            pos_hint: {'center_y': .7, 'center_x': .5}
            elevation: 1
        
        AngularRectangle:
            # md_bg_color: 1, 1, 1, 1
            size_hint: .93, .58
            pos_hint: {'center_y': .7, 'center_x': .5}
            elevation: 1
        
        FitImage:
            source: root.cover_photo
            size_hint: .93, .58
            pos_hint: {'center_y': .7, 'center_x': .5}
            radius: dp(12), dp(12)
        
        AngularRectangle:
            size_hint: .25, .25
            radius: dp(45), dp(45)
            pos_hint: {'center_y': .87, 'center_x': .85}
            md_bg_color: 0, 0, 0, 0
            
            FitImage:
                source: 'free.png'
        
        MDLabel:
            bold: True
            text: root.title
            pos_hint: {'center_y': .3, 'center_x': .5}
            halign: 'center'
        
        MDLabel:
            text: root.downloads+' downloads'
            pos_hint: {'center_y': .2, 'center_x': .5}
            halign: 'left'
            padding: dp(7.5)
        
        MDLabel:
            pos_hint: {'center_y': .2, 'right': 1}
            halign: 'right'
            text: 'Uploaded at: 22:00 CAT'
        
        MDLabel:
            text: 'file size: '+root.file_size
            halign: 'left'
            padding: dp(7.5)
            pos_hint: {'center_y': .1, 'left': 1}
        
        MDRaisedButton:
            text: 'Download Now'
            pos_hint: {'right': 1}

<AngularRectangle@MDCard>